<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="5dp"
    android:layout_gravity="center"
    app:cardBackgroundColor="@color/inner_boxes"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/foodo_list_relative_layout">

        <TextView
            android:id="@+id/foodo_list_name"
            android:layout_width="240dp"
            android:layout_height="wrap_content"

            android:layout_centerInParent="true"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="143dp"
            android:layout_toEndOf="@+id/share_foodo_list_button"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="67dp"
            tools:layout_editor_absoluteY="0dp" />

        <Button
            android:id="@+id/share_foodo_list_button"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/share_button"
            tools:layout_editor_absoluteY="0dp" />


        <Button
            android:id="@+id/delete_foodo_list_button"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="-249dp"
            android:layout_toEndOf="@+id/foodo_list_name"
            android:background="@drawable/delete_icon_bw"
            tools:layout_editor_absoluteY="0dp" />
        <!--        <LinearLayout-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_alignParentStart="true"-->
<!--            android:orientation="horizontal">-->
<!--        </LinearLayout>-->
    </RelativeLayout>

</androidx.cardview.widget.CardView>
